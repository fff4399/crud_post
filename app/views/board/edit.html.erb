<h1>Board#edit</h1>
<p>Find me in app/views/board/edit.html.erb</p>

<form action="/board/update/<%= @edit_post.id %>" method = "POST">
  
  <div>
    <label>title</label>
    <input name="title" type="text" value="<%= @edit_post.title %>" placeholder="title">
  </div>

  <div class="form-group">
    <label>editor</label>
    <input name="editor" type="text" value="<%= @edit_post.editor %>" placeholder="editor">
  </div>
  
  <div class="form-group">
    <label>content</label>
    <textarea name="content" rows="10"><%= @edit_post.content %></textarea>
  </div>  
  
    <br>
    <button type="submit">Submit</button>
 </form>